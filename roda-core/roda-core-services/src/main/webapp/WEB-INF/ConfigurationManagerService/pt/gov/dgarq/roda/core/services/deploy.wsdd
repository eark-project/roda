<!-- Use this file to deploy some handlers/chains and services      -->
<!-- Two ways to do this:                                           -->
<!--   java org.apache.axis.client.AdminClient deploy.wsdd          -->
<!--      after the axis server is running                          -->
<!-- or                                                             -->
<!--   java org.apache.axis.utils.Admin client|server deploy.wsdd   -->
<!--      from the same directory that the Axis engine runs         -->

<deployment
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java">

  <!-- Services from ConfigurationManagerService WSDL service -->

  <service name="ConfigurationManager" provider="java:RPC" style="wrapped" use="literal">
      <parameter name="wsdlTargetNamespace" value="http://services.core.roda.dgarq.gov.pt"/>
      <parameter name="wsdlServiceElement" value="ConfigurationManagerService"/>
      <parameter name="schemaQualified" value="http://services.core.roda.dgarq.gov.pt,http://filter.adapter.data.core.roda.dgarq.gov.pt,http://common.core.roda.dgarq.gov.pt"/>
      <parameter name="wsdlServicePort" value="ConfigurationManager"/>
      <parameter name="className" value="pt.gov.dgarq.roda.core.services.ConfigurationManager"/>
      <parameter name="wsdlPortType" value="ConfigurationManager"/>
      <parameter name="typeMappingVersion" value="1.2"/>
      <operation name="getProperty" qname="operNS:getProperty" xmlns:operNS="http://services.core.roda.dgarq.gov.pt" returnQName="retNS:getPropertyReturn" xmlns:retNS="http://services.core.roda.dgarq.gov.pt" returnType="rtns:string" xmlns:rtns="http://www.w3.org/2001/XMLSchema" soapAction="" >
        <parameter qname="pns:propertyName" xmlns:pns="http://services.core.roda.dgarq.gov.pt" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <fault name="RODAServiceException" qname="fns:fault" xmlns:fns="http://services.core.roda.dgarq.gov.pt" class="pt.gov.dgarq.roda.core.common.RODAServiceException" type="tns:RODAServiceException" xmlns:tns="http://common.core.roda.dgarq.gov.pt"/>
      </operation>
      <operation name="getProperties" qname="operNS:getProperties" xmlns:operNS="http://services.core.roda.dgarq.gov.pt" returnQName="retNS:getPropertiesReturn" xmlns:retNS="http://services.core.roda.dgarq.gov.pt" returnType="rtns:string" xmlns:rtns="http://www.w3.org/2001/XMLSchema" soapAction="" >
        <parameter qname="pns:propertyNames" xmlns:pns="http://services.core.roda.dgarq.gov.pt" type="tns:string" xmlns:tns="http://www.w3.org/2001/XMLSchema"/>
        <fault name="RODAServiceException" qname="fns:fault" xmlns:fns="http://services.core.roda.dgarq.gov.pt" class="pt.gov.dgarq.roda.core.common.RODAServiceException" type="tns:RODAServiceException" xmlns:tns="http://common.core.roda.dgarq.gov.pt"/>
      </operation>
      <parameter name="allowedMethods" value="getProperty getProperties"/>
      <parameter name="scope" value="Application"/>

      <typeMapping
        xmlns:ns="http://common.core.roda.dgarq.gov.pt"
        qname="ns:RODAServiceException"
        type="java:pt.gov.dgarq.roda.core.common.RODAServiceException"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle=""
      />
      <typeMapping
        xmlns:ns="http://common.core.roda.dgarq.gov.pt"
        qname="ns:RODAException"
        type="java:pt.gov.dgarq.roda.core.common.RODAException"
        serializer="org.apache.axis.encoding.ser.BeanSerializerFactory"
        deserializer="org.apache.axis.encoding.ser.BeanDeserializerFactory"
        encodingStyle=""
      />
  </service>
</deployment>
