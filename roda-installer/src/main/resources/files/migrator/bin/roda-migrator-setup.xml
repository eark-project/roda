<?xml version="1.0" encoding="UTF-8"?>
<project name="setup-migrator-core" basedir=".">

	<property environment="env" />

	<!-- ../config/cas-filter.properties -->
	<target name="cas-filter.properties">
		<replace file="../config/cas-filter.properties" token="RODA_CAS_URL" value="${env.RODA_CAS_URL}" />
		<replace file="../config/cas-filter.properties" token="RODA_CAS_EXTERNAL_URL" value="${env.RODA_CAS_EXTERNAL_URL}" />
		<replace file="../config/cas-filter.properties" token="RODA_CORE_URL" value="${env.RODA_CORE_URL}" />
	</target>

	<!-- ../config/roda-migrator.properties -->
	<target name="roda-migrator.properties">
		<replace file="../config/roda-migrator.properties" token="RODA_HOME" value="${env.RODA_HOME}" />
		<replace file="../config/roda-migrator.properties" token="RODACORE_HOST" value="${env.RODACORE_HOST}" />
		<replace file="../config/roda-migrator.properties" token="RODACORE_PORT" value="${env.RODACORE_PORT}" />
		<replace file="../config/roda-migrator.properties" token="RODAWUI_MYSQL_HOST" value="${env.RODAWUI_MYSQL_HOST}" />
		<replace file="../config/roda-migrator.properties" token="RODAWUI_MYSQL_PORT" value="${env.RODAWUI_MYSQL_PORT}" />
		<replace file="../config/roda-migrator.properties" token="RODAWUI_MYSQL_USER_PASSWD" value="${env.RODAWUI_MYSQL_USER_PASSWD}" />
		<replace file="../config/roda-migrator.properties" token="RODAWUI_MYSQL_USER" value="${env.RODAWUI_MYSQL_USER}" />
		<replace file="../config/roda-migrator.properties" token="RODA_CORE_URL" value="${env.RODA_CORE_URL}" />
		<replace file="../config/roda-migrator.properties" token="RODA_CAS_URL" value="${env.RODA_CAS_URL}" />
		<replace file="../config/roda-migrator.properties" token="RODA_CAS_EXTERNAL_URL" value="${env.RODA_CAS_EXTERNAL_URL}" />
	</target>

	<!-- ../config/roda-migrator-win.properties -->
	<target name="roda-migrator-win.properties">
		<replace file="../config/roda-migrator-win.properties" token="RODACORE_HOST" value="${env.RODACORE_HOST}" />
		<replace file="../config/roda-migrator-win.properties" token="RODACORE_PORT" value="${env.RODACORE_PORT}" />
		<replace file="../config/roda-migrator-win.properties" token="RODA_CORE_URL" value="${env.RODA_CORE_URL}" />
		<replace file="../config/roda-migrator-win.properties" token="RODA_CAS_URL" value="${env.RODA_CAS_URL}" />
		<replace file="../config/roda-migrator-win.properties" token="RODA_CAS_EXTERNAL_URL" value="${env.RODA_CAS_EXTERNAL_URL}" />
	</target>
</project>

