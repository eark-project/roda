# Variables
SET_RODA_ENV_SCRIPT="RODAHOME/bin/set-roda-env.sh"
TOMCAT_RELATIVE_PATH_TO_RODA_HOME="tomcat/TOMCATDIRNAME/"
JAVA_OPTS="-Dorg.apache.commons.logging.LogFactory=org.apache.commons.logging.impl.LogFactoryImpl -Xms256m -Xmx768m -XX:MaxPermSize=256m -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 -Dsun.lang.ClassLoader.allowArraySyntax=true -Djava.net.preferIPv4Stack=true -server"
RUN_SERVLET_CONTAINER_AS=USER

KEYSTORE="KEYSTOREPATH"
CATALINA_OPTS=$CATALINA_OPTS" -Djavax.net.ssl.keyStore=$KEYSTORE"
CATALINA_OPTS=$CATALINA_OPTS" -Djavax.net.ssl.keyStorePassword=changeit"
TRUSTSTORE="TRUSTSTOREPATH"
CATALINA_OPTS=$CATALINA_OPTS" -Djavax.net.ssl.trustStore=$TRUSTSTORE"
CATALINA_OPTS=$CATALINA_OPTS" -Djavax.net.ssl.trustStorePassword=changeit"

# Exports
export SET_RODA_ENV_SCRIPT
export TOMCAT_RELATIVE_PATH_TO_RODA_HOME
export JAVA_OPTS
export RUN_SERVLET_CONTAINER_AS
export CATALINA_OPTS
