<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>roda-in-installer</name>
	<artifactId>roda-in-installer</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<parent>
		<groupId>pt.gov.dgarq.roda</groupId>
		<artifactId>roda-ui</artifactId>
		<version>2.0.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<packaging>war</packaging>
	<properties>
		<staging.dir>${project.build.directory}/staging</staging.dir>
		<roda-in.version>${project.version}</roda-in.version>
		<roda-in.location>${basedir}/../roda-in</roda-in.location>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<!-- version 2.3 of maven-war-plugin breaks xml filtering :s -->
				<version>2.0.2</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<webResources>
						<resource>
							<filtering>true</filtering>
							<targetPath>WEB-INF/resources/</targetPath>
							<directory>${basedir}/src/main/webapp/WEB-INF/resources/</directory>
							<includes>
								<include>generic-install.xml</include>
								<include>user-install.xml</include>
							</includes>
						</resource>
						<resource>
							<filtering>false</filtering>
							<targetPath>WEB-INF/resources/</targetPath>
							<directory>${roda-in.location}/target/</directory>
							<includes>
								<include>roda-in.jar</include>
							</includes>
						</resource>
						<resource>
							<filtering>false</filtering>
							<targetPath>WEB-INF/resources/lib/</targetPath>
							<directory>${roda-in.location}/target/lib/</directory>
							<includes>
								<include>*.jar</include>
							</includes>
						</resource>
						<resource>
							<filtering>false</filtering>
							<targetPath>WEB-INF/resources/config/</targetPath>
							<directory>${roda-in.location}/target/config/</directory>
							<excludes>
								<exclude>roda-in-version.properties</exclude>
							</excludes>
						</resource>
						<resource>
							<filtering>true</filtering>
							<targetPath>WEB-INF/resources/config/</targetPath>
							<directory>${roda-in.location}/target/config/</directory>
							<includes>
								<include>roda-in-version.properties</include>
							</includes>
						</resource>
						<resource>
							<filtering>true</filtering>
							<targetPath>.</targetPath>
							<directory>${roda-in.location}/target/config/</directory>
							<includes>
								<include>roda-in-version.properties</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>create-roda-in-installer</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>create-staging-area-with-roda-in-installer-resources-in</id>
								<phase>process-resources</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${staging.dir}</outputDirectory>
									<encoding>UTF-8</encoding>
									<resources>
										<resource>
											<filtering>false</filtering>
											<directory>${basedir}/src/main/webapp/WEB-INF/resources/</directory>
											<excludes>
												<exclude>install.xml</exclude>
											</excludes>
										</resource>
										<resource>
											<filtering>true</filtering>
											<directory>${basedir}/src/main/webapp/WEB-INF/resources/</directory>
											<includes>
												<include>install.xml</include>
											</includes>
										</resource>
										<resource>
											<filtering>false</filtering>
											<directory>${roda-in.location}/target/</directory>
											<includes>
												<include>roda-in.jar</include>
											</includes>
										</resource>
										<resource>
											<filtering>false</filtering>
											<targetPath>./lib/</targetPath>
											<directory>${roda-in.location}/target/lib/</directory>
											<includes>
												<include>*.jar</include>
											</includes>
										</resource>
										<resource>
											<filtering>false</filtering>
											<targetPath>./config/</targetPath>
											<directory>${roda-in.location}/target/config/</directory>
											<excludes>
												<exclude>roda-in-version.properties</exclude>
											</excludes>
										</resource>
										<resource>
											<filtering>true</filtering>
											<targetPath>./config/</targetPath>
											<directory>${roda-in.location}/target/config/</directory>
											<includes>
												<include>roda-in-version.properties</include>
											</includes>
										</resource>
										<resource>
											<filtering>true</filtering>
											<targetPath>.</targetPath>
											<directory>${roda-in.location}/target/config/</directory>
											<includes>
												<include>roda-in-version.properties</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!--<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-roda-in-installer-dependencies</id>
								<phase>process-resources</phase>
								<goals>
									<goal>copy-dependencies</goal>
								</goals>
								<configuration>
									<stripVersion>true</stripVersion>
									<excludeGroupIds>org.codehaus.izpack</excludeGroupIds>
									<outputDirectory>${staging.dir}/lib</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>-->
					<plugin>
						<groupId>org.codehaus.izpack</groupId>
						<artifactId>izpack-maven-plugin</artifactId>
						<version>1.0-alpha-5</version>
						<configuration>
							<izpackBasedir>${staging.dir}</izpackBasedir>
							<descriptorEncoding>UTF-8</descriptorEncoding>
							<installerFile>${project.build.directory}/${project.build.finalName}</installerFile>
						</configuration>
						<executions>
							<execution>
								<id>standard-installer</id>
								<phase>package</phase>
								<goals>
									<goal>izpack</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-in</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-common-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-common-servlet-security</artifactId>
		</dependency>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-common-metadata</artifactId>
		</dependency>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-client</artifactId>
		</dependency>
		<dependency>
			<groupId>pt.gov.dgarq.roda</groupId>
			<artifactId>roda-common-data</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.izpack</groupId>
			<artifactId>izpack-standalone-compiler</artifactId>
		</dependency>
		<dependency>
			<groupId>org.bluestemsoftware.open.maven.plugin</groupId>
			<artifactId>launch4j-plugin</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-transaction</groupId>
			<artifactId>commons-transaction</artifactId>
		</dependency>
		<dependency>
			<groupId>org.opensaml</groupId>
			<artifactId>opensaml1</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jasig.cas.client</groupId>
			<artifactId>cas-client-core</artifactId>
			<exclusions>
				<exclusion>
					<groupId>javax.servlet</groupId>
					<artifactId>servlet-api</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.santuario</groupId>
			<artifactId>xmlsec</artifactId>
			<version>1.4.3</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
		</dependency>
	</dependencies>
</project>
