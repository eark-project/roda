<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:pt.gov.dgarq.roda.wui.main.client">

	<ui:style>
	.banner {
		background-color: #089de3;
		position: relative;
		height: 110px;
	}
	
	.homeLink {
		padding-left: 30px;
		height: 110px;
		cursor: pointer;
		cursor: hand;
	}
	
	.homeLogo {
		width: 75px;
	    height: 75px;
	    float: left;
	    margin-right: 20px;
	    margin-top: 18px;
	}
	
	.homeText {
		color: white;
		font-weight: 400;
		font-size: 58px;
		line-height: 110px;
		text-align: left;
	}
	
	.languageSwitcher {
		position: absolute;
		top: 10px;
		right: 40px;
	}
	
	.menu {
		padding: 0 30px;
		background-color: #5bbeff;
	}
	</ui:style>

	<ui:with field='res'
		type='pt.gov.dgarq.roda.wui.main.client.logos.LogosBundle' />

	<g:FlowPanel styleName="main">
		<!-- Header -->
		<g:FlowPanel styleName="{style.banner}">
			<g:FocusPanel styleName="{style.homeLink}" ui:field="homeLinkArea">
				<g:FlowPanel>
					<g:Image styleName="{style.homeLogo}" resource='{res.logo}' />
					<g:Label styleName="{style.homeText}">RODA</g:Label>
				</g:FlowPanel>
			</g:FocusPanel>
			<i:LanguageSwitcherPanel addStyleNames="{style.languageSwitcher}"
				ui:field="languageSwitcherPanel" />
		</g:FlowPanel>

		<!-- Menu -->
		<m:Menu ui:field="menu" addStyleNames="{style.menu}" />

		<!-- Content -->
		<m:ContentPanel ui:field="contentPanel" />
	</g:FlowPanel>

</ui:UiBinder>