<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:i="urn:import:config.i18n.client" xmlns:m="urn:import:pt.gov.dgarq.roda.wui.main.client">

	<ui:style type="pt.gov.dgarq.roda.wui.main.client.MenuPanel.MenuStyle">
	.menu {
		width: 100%;
		height: 17px;
		margin-top: 1px;
		background-color: #bcbec0;
		transition: .5s;
	}
	
	.menu:hover {
		transition: .5s;
	}
	
	.menu_darkblue:hover {
		background-color: #88AFBE;
	}
	
	.menu_lightblue:hover {
		background-color: #79C2FF;
	}
	
	.menu_yellow:hover {
		background-color: #D7BC00;
	}
	
	.menu_green:hover {
		background-color: #7e8a57;
	}
	
	.title {
		float: left;
		padding-left: 40px;
		width: 200px;
		margin-top: 3px;
		font-family: Verdana, Lucida, Arial, Helvetica, sans-serif;
		font-size: 8pt;
		font-weight: bold;
		font-variant: small-caps;
		color: #414042;
		cursor: pointer;
		cursor: hand;
	}
	
	.items {
		float: left;
	}
	
	.items * {
		float: left;
	}
	</ui:style>

	<g:FlowPanel styleName="{style.menu}">
		<g:Label styleName="{style.title}" ui:field="title" />
		<g:FlowPanel styleName="{style.items}" ui:field="itemsPanel" />
	</g:FlowPanel>
</ui:UiBinder>